{
  "name": "better-starlite",
  "version": "0.2.0",
  "description": "Drop-in replacement for better-sqlite3 with rqlite support and async/await API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./drizzle": {
      "require": "./dist/drizzle.js",
      "import": "./dist/drizzle.js",
      "types": "./dist/drizzle.d.ts"
    },
    "./dist/async-unified": {
      "require": "./dist/async-unified.js",
      "import": "./dist/async-unified.js",
      "types": "./dist/async-unified.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint . --ext .ts",
    "typecheck": "tsc --noEmit",
    "check": "tsc --noEmit"
  },
  "keywords": [
    "sqlite",
    "rqlite",
    "better-sqlite3",
    "database",
    "sql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "deasync": "^0.1.30"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/better-sqlite3": "^7.6.11",
    "@types/deasync": "^0.1.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "drizzle-orm": "^0.36.0",
    "eslint": "^9.0.0",
    "jest": "^29.0.0",
    "mysql2": "^3.15.3",
    "pg": "^8.16.3",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.36.0"
  },
  "peerDependenciesMeta": {
    "drizzle-orm": {
      "optional": true
    }
  }
}
