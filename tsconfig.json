{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "src/**/*-deno.ts",
    "src/**/*-deno.js",
    "src/drivers/deno-*.ts",
    "src/drivers/deno-*.js",
    "src/drivers/sqlite-deno-driver.ts",
    "src/drivers/sqlite-deno-driver.js",
    "src/drivers/sqlite-deno-driver.ts",
    "src/index-cross-platform.ts",
    "src/database-deno.ts"
  ]
}